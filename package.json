{
  "name": "widenbot",
  "version": "0.0.0",
  "description": "Slack bot for Widen",
  "keywords": [
    "slack",
    "Widen",
    "bot"
  ],
  "homepage": "https://github.com/Widen/widenbot",
  "bugs": {
    "url": "https://github.com/Widen/widenbot/issues"
  },
  "author": {
    "name": "Mark Feltner",
    "email": "mfeltner@widen.com",
    "url": "http://widen.com"
  },
  "license": "MIT",
  "main": "index.js",
  "bin": {
    "widenbot": "bin/cli.js"
  },
  "scripts": {
    "watch": "NODE_ENV=dev nodemon -w index.js -w lib -w plugins bin/cli.js -c config -p 8000",
    "lint": "jshint index.js lib/*.js plugins/*.js test/*.js bin/*.js",
    "unit-test": "tape ./test/*-test.js",
    "test": "npm run lint && npm run unit-test"
  },
  "dependencies": {
    "bunyan": "^1.0.1",
    "bunyan-prettystream": "^0.1.3",
    "lodash": "^2.4.1",
    "minimist": "^1.1.0",
    "promise": "^6.0.0",
    "restify": "^2.8.2"
  },
  "devDependencies": {
    "jshint": "^2.5.5",
    "localtunnel": "^1.4.0",
    "tape": "^2.14.0"
  },
  "optionalDependencies": {
    "lastfm": "^0.9.2"
  }
}
